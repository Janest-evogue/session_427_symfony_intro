{% extends 'base.html.twig' %}

{% block body %}
    <form>
        <input type="email" name="email" placeholder="Email">
        <button type="submit">Chercher</button>
    </form>

    {# si le contrôleur a passé une variable user, c'est qu'il y a eu une recherche #}
    {% if user is defined %}
        {# si l'email recherché existe dans la table user #}
        {% if user is not null %}
            <p>L'utilisateur est {{ user.firstname }} {{ user.lastname }}</p>
        {% else %}
            <p>Aucun utilisateur avec cet email</p>
        {% endif %}
    {% endif %}
{% endblock %}
